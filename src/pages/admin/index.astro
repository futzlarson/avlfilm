---
// Internal imports
import { db } from '@db';
import { siteSettings } from '@db/schema';
import { emails } from '@emails';
import { logError } from '@lib/rollbar';
import BaseLayout from '@layouts/BaseLayout.astro';
import AdminNav from '@components/AdminNav.astro';

// External packages
import { inArray } from 'drizzle-orm';

const allPages = import.meta.glob('/src/pages/**/*.astro', { eager: true });
const links = Object.values(allPages).filter((page: any) => !page.url.startsWith('/account/') && !page.url.startsWith('/admin/'));

const emailEntries = Object.entries(emails);

let bannerHtml = '<p>Welcome to AVL Film!</p>';
let bannerEnabled = false;

try {
  const settings = await db
    .select()
    .from(siteSettings)
    .where(inArray(siteSettings.key, ['banner_html', 'banner_enabled']));

  bannerHtml = settings.find(row => row.key === 'banner_html')?.value || '<p>Welcome to AVL Film!</p>';
  bannerEnabled = settings.find(row => row.key === 'banner_enabled')?.value === 'true';
} catch (error) {
  logError(error, { context: 'admin index', action: 'load banner settings' });
}
---

<BaseLayout title="Admin Dashboard">
  <div class="admin-header">
    <h1>Admin</h1>
  </div>

  <AdminNav currentPage="dashboard" />

  <div class="admin-section">
    <h2 style="margin-top: 0">Banner Settings</h2>
    <div id="message" class="message"></div>

    <form id="banner-form">
      <div class="form-group">
        <textarea
          id="banner-html"
          name="banner_html"
          rows="5"
          required
        >{bannerHtml}</textarea>
      </div>

      <div class="form-group">
        <label class="checkbox-label">
          <input
            type="checkbox"
            id="banner-enabled"
            name="banner_enabled"
            checked={bannerEnabled}
          />
          Enable Banner
        </label>
      </div>

      <button type="submit" class="submit-btn">Save</button>
    </form>
  </div>

  <div class="grid-container">
    <div class="admin-section">
      <h2>Pages</h2>
      {links.map((page: any) => (
        <a href={page.url || '/'}>{page.url || '/index'}</a><br />
      ))}
    </div>

    <div class="admin-section">
      <h2>Emails</h2>
      <table class="emails-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Audience</th>
          </tr>
        </thead>
        <tbody>
          {emailEntries.map(([key, email]) => (
            <tr>
              <td>
                <a href={`/api/preview-email?type=${key}`} target="_blank">
                  {email.metadata.name}
                </a>
              </td>
              <td>{email.metadata.audience}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</BaseLayout>

<style>
  .grid-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin: 2rem 0;
  }

  @media (max-width: 768px) {
    .grid-container {
      grid-template-columns: 1fr;
      gap: 1rem;
      margin: 1rem 0;
    }

    #banner-html {
      font-size: 0.8rem;
    }
  }

  h2 {
    margin-bottom: 1.5rem;
    color: #333;
  }

  .message {
    padding: 1rem;
    margin-bottom: 1rem;
    border-radius: var(--radius-sm);
    display: none;
  }

  .message.success {
    background-color: #d4edda;
    color: #155724;
    border: 1px solid #c3e6cb;
    display: block;
  }

  .message.error {
    background-color: #f8d7da;
    color: #721c24;
    border: 1px solid #f5c6cb;
    display: block;
  }

  .emails-table {
    width: 100%;
    border-collapse: collapse;
  }

  .emails-table th {
    text-align: left;
    padding: 0.5rem;
    border-bottom: 2px solid #ddd;
    font-weight: 600;
  }

  .emails-table td {
    padding: 0.5rem;
    border-bottom: 1px solid #eee;
  }

  .emails-table tr:hover {
    background-color: #f5f5f5;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: #333;
  }

  textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: var(--radius-sm);
    font-family: monospace;
    font-size: 0.9rem;
    resize: vertical;
  }

  .checkbox-label {
    display: flex;
    align-items: center;
    cursor: pointer;
  }

  input[type="checkbox"] {
    margin-right: 0.5rem;
    width: 18px;
    height: 18px;
    cursor: pointer;
  }

  .submit-btn {
    background-color: #1a1a1a;
    color: white;
    padding: 0.75rem 2rem;
    border: none;
    border-radius: var(--radius-sm);
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .submit-btn:hover {
    background-color: #333;
  }

  .submit-btn:disabled {
    background-color: #999;
    cursor: not-allowed;
  }
</style>

<script>
  const form = document.getElementById('banner-form') as HTMLFormElement;
  const htmlTextarea = document.getElementById('banner-html') as HTMLTextAreaElement;
  const enabledCheckbox = document.getElementById('banner-enabled') as HTMLInputElement;
  const messageDiv = document.getElementById('message') as HTMLDivElement;

  function showMessage(text: string, type: 'success' | 'error') {
    messageDiv.textContent = text;
    messageDiv.className = `message ${type}`;
    setTimeout(() => {
      messageDiv.className = 'message';
    }, 5000);
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    submitBtn.disabled = true;

    try {
      const response = await fetch('/api/banner', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          banner_html: htmlTextarea.value,
          banner_enabled: enabledCheckbox.checked,
        }),
      });

      if (!response.ok) throw new Error('Failed to update banner');

      // Reload the page to see the updated banner
      window.location.reload();
    } catch (error) {
      showMessage('Failed to update banner settings', 'error');
      console.error(error);
      submitBtn.disabled = false;
    }
  });
</script>
