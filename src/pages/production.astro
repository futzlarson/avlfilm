<style>
  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .page-header h1 {
    margin: 0;
  }

  .intro {
    font-size: 1rem;
    color: var(--color-text-light);
    margin-bottom: 2rem;
  }

  .intro a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .intro a:hover {
    text-decoration: underline;
  }

  .production-companies {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .company {
    background: var(--color-bg-subtle);
  }

  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      align-items: stretch;
    }
  }
</style>

<script>
  import { track } from '@lib/analytics';
  import { setupModal } from '@lib/modal';

  document.addEventListener('DOMContentLoaded', () => {
    const cancelBtn = document.getElementById('production-company-modal')?.querySelector('.btn-cancel');
    const closeSuccessBtn = document.getElementById('production-company-modal')?.querySelector('.btn-close-success');
    const form = document.getElementById('production-company-form') as HTMLFormElement;
    const successMessage = document.getElementById('success-message');
    const descriptionTextarea = document.getElementById('description') as HTMLTextAreaElement;
    const charCount = document.getElementById('char-count');

    const modalControls = setupModal('production-company-modal', {
      onClose: () => {
        form?.reset();
        if (form) form.style.display = 'block';
        if (successMessage) successMessage.style.display = 'none';
        if (charCount) charCount.textContent = '0';
      }
    });

    if (!modalControls) return;

    const { close } = modalControls;

    cancelBtn?.addEventListener('click', close);
    closeSuccessBtn?.addEventListener('click', close);

    // Character count
    descriptionTextarea?.addEventListener('input', () => {
      if (charCount) {
        charCount.textContent = descriptionTextarea.value.length.toString();
      }
    });

    // Form submission
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const submitBtn = form.querySelector('.btn-submit') as HTMLButtonElement;
      const originalText = submitBtn.textContent;

      try {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Submitting...';

        const formData = new FormData(form);
        const data = {
          email: formData.get('email'),
          companyName: formData.get('companyName'),
          website: formData.get('website'),
          description: formData.get('description'),
        };

        const response = await fetch('/api/submit-production-company', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        if (!response.ok) {
          const error = await response.json();
          throw new Error(error.error || 'Failed to submit');
        }

        // Show success message
        form.style.display = 'none';
        if (successMessage) successMessage.style.display = 'block';
      } catch (error) {
        alert(error instanceof Error ? error.message : 'Failed to submit. Please try again.');
        submitBtn.disabled = false;
        submitBtn.textContent = originalText || 'Submit';
      }
    });

    // Track company link clicks
    document.querySelectorAll('.company h2 a').forEach(link => {
      link.addEventListener('click', () => {
        track('production_company_link_click', {
          company_name: (link.textContent || '').substring(0, 255),
          website: (link as HTMLAnchorElement).href.substring(0, 255)
        });
      });
    });
  });

  // Expose openProductionModal to window for inline onclick handler
  function openProductionModal() {
    track('production_add_company_button_click');
    const modal = document.getElementById('production-company-modal');
    if (modal) {
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
  }

  (window as any).openProductionModal = openProductionModal;
</script>
