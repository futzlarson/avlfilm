---
interface BannerData {
  banner_html: string;
  banner_enabled: boolean;
}

let bannerData: BannerData | null = null;

try {
  const response = await fetch(`${Astro.url.origin}/api/banner`);
  if (response.ok) {
    bannerData = await response.json();
  }
} catch (error) {
  console.error('Failed to fetch banner:', error);
}

const shouldDisplay = bannerData?.banner_enabled === true;
---

{shouldDisplay && bannerData && (
  <div class="banner">
    <div class="banner-content" set:html={bannerData.banner_html} />
  </div>
)}

<style>
  .banner {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.75rem 2rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .banner-content {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
    font-size: 0.95rem;
  }

  .banner-content :global(p) {
    margin: 0;
    line-height: 1.4;
  }

  .banner-content :global(a) {
    color: #ffd700;
    text-decoration: underline;
    font-weight: 500;
  }

  .banner-content :global(a:hover) {
    color: #ffed4e;
  }

  @media (max-width: 768px) {
    .banner {
      padding: 0.75rem 1rem;
    }

    .banner-content {
      font-size: 0.9rem;
    }
  }
</style>
