---
import BaseLayout from '../layouts/BaseLayout.astro';
import FilmmakerTable from '../components/FilmmakerTable.astro';
import FilmmakerModal from '../components/FilmmakerModal.astro';
import { db } from '../db';
import { filmmakers as filmmakersTable } from '../db/schema';
import { eq } from 'drizzle-orm';
import type { PublicFilmmaker } from '../types/filmmaker';

let filmmakers: PublicFilmmaker[] = [];
let error = null;

try {
  // Fetch approved filmmakers directly from database
  const results = await db
    .select()
    .from(filmmakersTable)
    .where(eq(filmmakersTable.status, 'approved'));

  // Remove email and phone from results
  filmmakers = results.map(({ email, phone, ...filmmaker }) => filmmaker);
} catch (e) {
  console.error('Error fetching filmmakers:', e);
  error = 'Failed to load filmmakers';
}
---

<BaseLayout
  title="Filmmaker Directory"
  description="Browse the filmmaker directory to connect with local filmmakers, cinematographers, editors, producers, and crew members in Asheville, NC."
  keywords="Asheville filmmakers, AVL Film directory, film crew Asheville, cinematographer Asheville, video production Asheville, local filmmakers NC"
>
  <div class="directory-header">
    <h1>Filmmaker Directory</h1>
    <a href="/submit" class="add-yourself-btn">Add Yourself</a>
  </div>

  <p class="intro">
    Connect with local filmmakers, crew members, and industry professionals in the Asheville area.
  </p>

  <div class="mobile-warning">
    <p>For the best viewing experience, we recommend viewing this directory on a desktop or tablet.</p>
  </div>

  {error ? (
    <div class="error-message">
      <p>{error}</p>
    </div>
  ) : filmmakers.length > 0 ? (
    <FilmmakerTable filmmakers={filmmakers} />
  ) : (
    <div class="empty-message">
      <p>No filmmakers in the directory yet. Be the first to add yourself!</p>
    </div>
  )}

  <FilmmakerModal id="filmmaker-modal" />
</BaseLayout>

<style>
  .directory-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .add-yourself-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.15s;
    display: inline-block;
  }

  .add-yourself-btn:hover {
    transform: translateY(-2px);
  }

  .error-message,
  .empty-message {
    padding: 2rem;
    text-align: center;
    background: #f9fafb;
    border-radius: 8px;
    color: #666;
  }

  .mobile-warning {
    background: #fef3c7;
    border: 1px solid #fbbf24;
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .mobile-warning p {
    margin: 0;
    color: #92400e;
    font-size: 0.875rem;
  }

  @media (min-width: 769px) {
    .mobile-warning {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .directory-header {
      flex-direction: column;
      align-items: stretch;
    }

    .add-yourself-btn {
      text-align: center;
    }
  }
</style>
