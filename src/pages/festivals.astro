<style>
  .hero {
    padding: 2rem 0 1rem;
  }

  .hero h1 {
    margin-bottom: 0.5rem;
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--color-text-light);
    font-style: italic;
    margin: 0;
  }

  .intro {
    background: var(--color-bg-subtle);
    padding: 1.5rem;
    border-radius: var(--radius-lg);
    margin: 2rem 0;
    border-left: 4px solid var(--color-primary);
  }

  .intro p {
    margin: 0;
    line-height: 1.7;
    font-size: 1.05rem;
  }

  .highlights {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0 3rem;
  }

  .highlight-box {
    padding: 1.5rem;
    border-radius: var(--radius-lg);
    border: 1px solid #e5e7eb;
  }

  .highlight-box:nth-child(1) {
    background: linear-gradient(135deg, #60a5fa20 0%, #3b82f640 100%);
    border-color: #93c5fd;
  }

  .highlight-box:nth-child(2) {
    background: linear-gradient(135deg, #f59e0b20 0%, #f59e0b40 100%);
    border-color: #fbbf24;
  }

  .highlight-box:nth-child(3) {
    background: linear-gradient(135deg, #ec489920 0%, #ec489940 100%);
    border-color: #f472b6;
  }

  .highlight-box h3 {
    margin-top: 0;
    margin-bottom: 1rem;
    color: #1f2937;
    font-size: 1.1rem;
  }

  .highlight-box ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .highlight-box li {
    padding: 0.4rem 0;
    color: #4b5563;
  }

  .highlight-box strong {
    color: #1f2937;
  }

  .highlight-box a {
    color: #1f2937;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
  }

  .highlight-box a:hover {
    color: var(--color-primary);
  }

  .festivals {
    margin-bottom: 3rem;
  }

  .festivals h2 {
    color: #1f2937;
    border-bottom: 2px solid #e5e7eb;
    padding-bottom: 0.5rem;
    margin-bottom: 1.5rem;
    font-size: 1.5rem;
  }

  .festivals {
    align-items: start;
  }

  .festivals h2 {
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .festivals h2:first-of-type {
    margin-top: 0;
  }

  .festival h3 {
    margin-bottom: 0.5rem;
  }

  .meta {
    color: var(--color-primary);
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
  }


  @media (max-width: 768px) {
    .hero h1 {
      font-size: 1.75rem;
    }

    .tagline {
      font-size: 1rem;
    }

    .highlights {
      grid-template-columns: 1fr;
    }

    .festival h3 {
      font-size: 1.15rem;
    }
  }
</style>
