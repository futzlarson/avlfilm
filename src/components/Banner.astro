---
// Internal imports
import { getBannerSettings } from '@lib/banner-cache';

const { html: bannerHtml, enabled: bannerEnabled } = await getBannerSettings();
---

{bannerEnabled && (
  <div class="banner">
    <div class="banner-content" set:html={bannerHtml} />
  </div>
)}

<style>
  .banner {
    background: var(--gradient-primary);
    color: white;
    padding: 0.75rem 2rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .banner-content {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
    font-size: 0.95rem;
  }

  .banner-content :global(p) {
    margin: 0;
    line-height: 1.4;
  }

  .banner-content :global(a) {
    color: #ffd700;
    text-decoration: underline;
    font-weight: 500;
  }

  .banner-content :global(a:hover) {
    color: #ffed4e;
  }

  @media (max-width: 768px) {
    .banner {
      padding: 0.75rem 1rem;
    }

    .banner-content {
      font-size: 0.9rem;
    }
  }
</style>
