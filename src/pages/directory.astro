---
// Internal imports
import { db } from '@db';
import { filmmakers as filmmakersTable } from '@db/schema';
import type { PublicFilmmaker } from '@db/schema';
import { logError } from '@lib/rollbar';
import BaseLayout from '@layouts/BaseLayout.astro';
import FilmmakerTable from '@components/FilmmakerTable.astro';
import FilmmakerModal from '@components/FilmmakerModal.astro';

// External packages
import { eq } from 'drizzle-orm';

let filmmakers: PublicFilmmaker[] = [];
let error = null;

try {
  // Fetch approved filmmakers directly from database
  const results = await db
    .select()
    .from(filmmakersTable)
    .where(eq(filmmakersTable.status, 'approved'));

  // Remove email and phone from results
  filmmakers = results.map(({ email, phone, ...filmmaker }) => filmmaker) as PublicFilmmaker[];
} catch (e) {
  logError(e, { context: 'directory page', action: 'fetch filmmakers' });
  error = 'Failed to load filmmakers';
}
---

<BaseLayout
  title="Filmmaker Directory"
  description="Browse the filmmaker directory to connect with local filmmakers, cinematographers, editors, producers, and crew members in Asheville, NC."
  keywords="Asheville filmmakers, AVL Film directory, film crew Asheville, cinematographer Asheville, video production Asheville, local filmmakers NC"
>
  <div class="directory-header">
    <h1>Filmmaker Directory</h1>
    <a href="/submit" class="btn-primary">Create Account</a>
  </div>

  <p class="intro">
    Connect with local filmmakers, crew members, and industry professionals in the Asheville area. Filtering by multiple roles will display crew that match <em>any</em> of the roles.
  </p>

  <div class="mobile-warning">
    <p>For the best viewing experience, we recommend viewing this directory on a desktop or tablet.</p>
  </div>

  {error ? (
    <div class="error-message">
      <p>{error}</p>
    </div>
  ) : filmmakers.length > 0 ? (
    <FilmmakerTable filmmakers={filmmakers} />
  ) : (
    <div class="empty-message">
      <p>No filmmakers in the directory yet. Be the first to add yourself!</p>
    </div>
  )}

  <FilmmakerModal id="filmmaker-modal" />
</BaseLayout>

<style>
  .directory-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  .error-message,
  .empty-message {
    padding: 2rem;
    text-align: center;
    background: var(--color-bg-subtle);
    border-radius: var(--radius-lg);
    color: var(--color-text-light);
  }

  .mobile-warning {
    background: #fef3c7;
    border: 1px solid #fbbf24;
    border-radius: var(--radius-lg);
    padding: 1rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .mobile-warning p {
    margin: 0;
    color: #92400e;
    font-size: 0.875rem;
  }

  @media (min-width: 769px) {
    .mobile-warning {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .directory-header {
      flex-direction: column;
      align-items: stretch;
    }

    .add-yourself-btn {
      text-align: center;
    }
  }
</style>

<script>
  import { track } from '@lib/analytics';

  document.addEventListener('DOMContentLoaded', () => {
    const addYourselfBtn = document.querySelector('.btn-primary');
    addYourselfBtn?.addEventListener('click', () => {
      track('directory_add_yourself_button_click');
    });
  });
</script>
